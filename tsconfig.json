{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "target": "es5",
        "jsx": "react",
        "module": "commonjs",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "declaration": false,
        "noImplicitAny": false,
        "noImplicitReturns": false,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "removeComments": true,
        "strictNullChecks": false,
        "lib": [
            "es6",
            "es7",
            "dom"
        ],
        "typeRoots": [
            "custom_typings",
            "node_modules/@types"
        ]
    },
    "exclude": [
        "dist",
        "build",
        "node_modules"
    ]
}